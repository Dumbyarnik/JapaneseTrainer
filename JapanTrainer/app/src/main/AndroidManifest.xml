<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.japantrainer">

    <application
        android:name="helpClasses.managerClasses.GlobalVariables"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="gameScreens.QuizGame"
            android:parentActivityName="startScreens.HomeScreen"></activity>
        <activity android:name="startScreens.choiceScreens.GameChoice"
            android:parentActivityName="startScreens.choiceScreens.LetterChoice"/>
        <activity android:name="startScreens.choiceScreens.LetterChoice"
            android:parentActivityName="startScreens.choiceScreens.FontChoice"/>
        <activity android:name="gameScreens.TextGame" />
        <activity android:name="startScreens.choiceScreens.FontChoice"
            android:parentActivityName="startScreens.HomeScreen"/>
        <activity android:name="startScreens.HomeScreen" />
        <activity android:name="startScreens.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>